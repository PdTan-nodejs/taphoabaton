<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạp Hóa Bất ổn</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .intro-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/intro-bg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            animation: fadeIn 0.8s ease-in forwards;
        }

        /* Fallback gradient background if image is not available */
        .intro-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            z-index: -1;
        }

        .intro-content {
            text-align: center;
            z-index: 1;
            opacity: 0;
            animation: fadeZoomIn 1.2s ease-out 0.3s forwards;
        }

        .intro-logo {
            font-size: 3.5rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            letter-spacing: 2px;
        }

        .intro-slogan {
            font-size: 1.5rem;
            color: #fff;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
            font-weight: 300;
            letter-spacing: 1px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fadeZoomIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Preload image - hidden element */
        .preload-image {
            position: absolute;
            width: 0;
            height: 0;
            opacity: 0;
            visibility: hidden;
        }

        /* Mobile responsive */
        @media (max-width: 768px) {
            .intro-logo {
                font-size: 2.5rem;
                letter-spacing: 1px;
            }

            .intro-slogan {
                font-size: 1.2rem;
                padding: 0 20px;
            }
        }

        @media (max-width: 480px) {
            .intro-logo {
                font-size: 2rem;
            }

            .intro-slogan {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Preload background image -->
    <img src="/images/intro-bg.jpg" alt="" class="preload-image" onerror="this.style.display='none'">

    <div class="intro-container">
        <div class="intro-content">
            <h1 class="intro-logo">Tạp Hóa Bất ổn</h1>
            <p class="intro-slogan">Khám phá thế giới của những câu chuyện</p>
        </div>
    </div>

    <script>
        // Preload background image
        const bgImage = new Image();
        bgImage.src = '/images/intro-bg.jpg';
        
        // Redirect after 2.5 seconds
        setTimeout(function() {
            window.location.href = '/home';
        }, 2500);
    </script>
</body>
</html>
