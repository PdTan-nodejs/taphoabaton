<article class="post-detail enterprise-detail">
    <div class="container">
        <nav class="breadcrumb enterprise-breadcrumb">
            <a href="/">Trang chủ</a>
            <span class="breadcrumb-separator">/</span>
            <a href="/posts">Bài viết</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">
                <%= post.title %>
            </span>
        </nav>

        <div class="post-header enterprise-detail-header">
            <div class="post-meta enterprise-detail-meta">
                <% if (post.category && post.category.name) { %>
                    <span class="post-category enterprise-detail-category">
                        <%= post.category.name %>
                    </span>
                    <% } %>
                        <span class="post-date enterprise-detail-date">
                            <%= post.formattedDate %>
                        </span>
                        <span class="post-views enterprise-detail-views">
                            <%= post.views %> lượt xem
                        </span>
            </div>
            <h1 class="enterprise-detail-title">
                <%= post.title %>
            </h1>
        </div>

        <% if (post.image) { %>
            <div class="post-featured-image enterprise-featured-image">
                <img src="/uploads/<%= post.image %>" alt="<%= post.title %>">
            </div>
            <% } %>

                <div class="post-content enterprise-detail-content">
                    <%- post.content %>
                </div>

                <div class="related-posts enterprise-related">
                    <h3 class="enterprise-related-title">Bài viết liên quan</h3>
                    <div class="related-posts-grid enterprise-related-grid">
                        <% relatedPosts.forEach(relatedPost=> { %>
                            <div class="related-post-card enterprise-related-card">
                                <% if (relatedPost.image) { %>
                                    <div class="related-post-image enterprise-related-image">
                                        <a href="/posts/<%= relatedPost.slug %>">
                                            <img src="/uploads/<%= relatedPost.image %>" alt="<%= relatedPost.title %>">
                                        </a>
                                    </div>
                                    <% } %>
                                        <div class="enterprise-related-content">
                                            <h4 class="enterprise-related-card-title"><a
                                                    href="/posts/<%= relatedPost.slug %>">
                                                    <%= relatedPost.title %>
                                                </a></h4>
                                            <p class="enterprise-related-excerpt">
                                                <%= relatedPost.truncatedExcerpt %>
                                            </p>
                                        </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
    </div>
</article>